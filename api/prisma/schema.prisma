// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String
  password  String
  rol       String   @default("admin") // "admin", "empleado" o "cliente"
  clienteId Int?     @unique
  cliente   Cliente? @relation(fields: [clienteId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cliente {
  id        Int       @id @default(autoincrement())
  nombre    String
  cedula    String
  telefono  String
  direccion String?
  email     String?
  activo    Boolean   @default(true) // true: activo, false: archivado/completado
  usuario   Usuario?
  autos     Auto[]
  permutas  Permuta[] // Permutas entregadas por este cliente
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Auto {
  id            Int       @id @default(autoincrement())
  marca         String
  modelo        String
  anio          Int
  matricula     String    // Removido @unique para permitir múltiples autos 0km
  precio        Float
  estado        String    @default("disponible") // disponible, vendido, reservado
  activo        Boolean   @default(true) // true: activo, false: archivado/completado
  // Nuevos campos
  kilometraje   Int?      // Kilometraje del vehículo
  departamento  String?   // Departamento de procedencia
  tipoDocumento String?   // Tipo de documentación del vehículo
  valorPatente  Float?    // Valor de la patente
  color         String?   // Color del vehículo
  // Relaciones
  clienteId     Int?
  cliente       Cliente?  @relation(fields: [clienteId], references: [id])
  pagos         Pago[]
  permutas      Permuta[] // Permutas recibidas al vender este auto
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Pago {
  id                Int       @id @default(autoincrement())
  autoId            Int
  auto              Auto      @relation(fields: [autoId], references: [id])
  numeroCuota       Int
  monto             Float
  fechaVencimiento  DateTime
  fechaPago         DateTime?
  estado            String    @default("pendiente") // pendiente, pagado, vencido
  comentario        String?   // Comentario del empleado/admin sobre el motivo de no pago
  comprobantes      ComprobantePago[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Permuta {
  id              Int      @id @default(autoincrement())
  tipo            String   // "auto", "moto", "otros"
  descripcion     String?  // Descripción general o detalles del bien
  // Datos específicos de auto
  autoMarca       String?
  autoModelo      String?
  autoAnio        Int?
  autoMatricula   String?
  // Datos específicos de moto
  motoMarca       String?
  motoModelo      String?
  motoAnio        Int?
  // Valor
  valorEstimado   Float    // Valor acordado de la permuta
  valorReal       Float?   // Valor real de mercado (ajuste posterior)
  // Relaciones
  clienteId       Int
  cliente         Cliente  @relation(fields: [clienteId], references: [id])
  autoVendidoId   Int      // Auto que se vendió y por el cual se recibió la permuta
  autoVendido     Auto     @relation(fields: [autoVendidoId], references: [id])
  // Notas
  notas           String?  // Notas del evaluador
  // Fechas
  fechaRecepcion  DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ComprobantePago {
  id                Int       @id @default(autoincrement())
  pagoId            Int
  pago              Pago      @relation(fields: [pagoId], references: [id])
  numeroCuenta      String    // Número de cuenta de transferencia
  archivoUrl        String    // URL del archivo del comprobante (PDF, JPG, PNG)
  estado            String    @default("pendiente") // pendiente, aprobado, rechazado
  visto             Boolean   @default(false) // Si fue visto por admin/empleado
  notas             String?   // Notas del administrador/empleado
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}