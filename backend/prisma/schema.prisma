// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  rol       String   @default("admin") // "admin" o "cliente"
  clienteId Int?     @unique
  cliente   Cliente? @relation(fields: [clienteId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  cedula    String   @unique
  telefono  String
  direccion String?
  email     String   @unique
  activo    Boolean  @default(true) // true: activo, false: archivado/completado
  usuario   Usuario?
  autos     Auto[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Auto {
  id         Int      @id @default(autoincrement())
  marca      String
  modelo     String
  anio       Int
  matricula  String   @unique
  precio     Float
  estado     String   @default("disponible") // disponible, vendido, reservado
  activo     Boolean  @default(true) // true: activo, false: archivado/completado
  clienteId  Int?
  cliente    Cliente? @relation(fields: [clienteId], references: [id])
  pagos      Pago[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Pago {
  id                Int       @id @default(autoincrement())
  autoId            Int
  auto              Auto      @relation(fields: [autoId], references: [id])
  numeroCuota       Int
  monto             Float
  fechaVencimiento  DateTime
  fechaPago         DateTime?
  estado            String    @default("pendiente") // pendiente, pagado, vencido
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
